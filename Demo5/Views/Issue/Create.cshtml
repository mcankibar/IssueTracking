@model Issue

<form method="post">
    <div class="border-p3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Issue</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Title"> </label>
            <input asp-for="Title" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="Description" for="exampleTextarea" class="form-label mt-4">Description</label>
            <textarea asp-for="Description"class="form-control" id="exampleTextarea" rows="3"></textarea>
        </div>
       
        <div class="form-group">
            <label for="exampleSelect1" class="form-label mt-4">Select a Project</label>
            <select asp-for="ProjectId" class="form-select" id="project">
                @foreach (var project in (IEnumerable<SelectListItem>)ViewData["Projects"])
                {
                    <option value="@project.Value">@project.Text</option>
                }
            </select>
        </div>

        
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Issue" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to Issues List
        </a>
    </div>
</form>