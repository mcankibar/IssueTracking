@model IEnumerable<Issue>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Issues</h2>
        </div>
        <div class="col-3">
            <a asp-controller="Issue" asp-action="Create" class="btn btn-primary">Create New Issue</a>
        </div>
    </div>

    
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Description</th>
                <th scope="col">Project</th>
                <th scope="col">Status</th>
                <th scope="col">CreatedDate</th>
                <th scope="col">CreatedBy</th>
                <th scope="col">UpdatedDate</th>
                <th scope="col">UpdatedBy</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr class="table-active">
                    <td>
                        @obj.Id
                    </td>
                    <td>
                        @obj.Description
                    </td>
                    <td>
                       
                            @obj.Project.Name
                        
                    </td>
                    <td>
                        @obj.Status
                    </td>
                    <td>
                        @obj.CreatedDate
                    </td>
                    <td>
                        @if (obj.CreatedBy != null)
                        {
                            @obj.CreatedBy.Email
                        }
                    </td>
                    <td>
                        @obj.UpdatedDate
                    </td>
                    <td>
                        @obj.UpdatedBy
                    </td>
                    <td>
                        <a asp-controller="Issue" asp-action="IssueDetail" asp-route-id="@obj.Id">View Details</a>
                    </td>
                </tr>


            }
        </tbody>
    </table>





</div>
